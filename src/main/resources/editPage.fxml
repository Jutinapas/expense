<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EditPageController">
   <children>
      <Pane fx:id="editPagePane" prefHeight="350.0" prefWidth="400.0">
         <children>
            <DatePicker fx:id="dateField" layoutX="18.0" layoutY="54.0" />
            <TextArea fx:id="descField" layoutX="18.0" layoutY="128.0" prefHeight="122.0" prefWidth="364.0" />
            <Label layoutX="18.0" layoutY="27.0" text="Date">
               <font>
                  <Font name="Consolas" size="24.0" />
               </font></Label>
            <Label layoutX="18.0" layoutY="100.0" text="Description">
               <font>
                  <Font name="Consolas" size="24.0" />
               </font></Label>
            <Label layoutX="18.0" layoutY="265.0" text="Amount">
               <font>
                  <Font name="Consolas" size="24.0" />
               </font></Label>
            <Button fx:id="editButton" layoutX="263.0" layoutY="267.0" mnemonicParsing="false" onAction="#handleEditButton" prefHeight="64.0" prefWidth="119.0" text="EDIT">
               <font>
                  <Font name="Consolas Bold" size="28.0" />
               </font></Button>
            <Spinner fx:id="amountField" layoutX="18.0" layoutY="298.0" prefHeight="30.0" prefWidth="230.0" />
         </children></Pane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
